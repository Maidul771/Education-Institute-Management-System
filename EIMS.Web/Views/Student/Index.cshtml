@model IEnumerable<EIMS.DAL.Models.Student>
@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Student</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Roll</th>
            <th>Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
                <tr><td colspan="5" class="text-center">No students available.</td></tr>
        }
        else
        {
            int index = 1;
            foreach (var student in Model)
            {
                        <tr>
                            <td>@index</td>
                            <td>@student.Name</td>
                            <td>@student.Roll</td>
                            <td>@student.Class</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                index++;
            }
        }
    </tbody>
</table>

