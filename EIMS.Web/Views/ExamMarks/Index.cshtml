@model IEnumerable<EIMS.DAL.Models.ExamMark>

@{
    ViewData["Title"] = "Exam Marks";
}

<h2>Exam Marks</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Exam Marks</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student</th>
            <th>Course</th>
            <th>MCQ</th>
            <th>Written</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student.Name</td>
                <td>@item.Course.CourseName</td>
                <td>@item.MCQ</td>
                <td>@item.Written</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
