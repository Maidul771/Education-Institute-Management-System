@model EIMS.DAL.Models.ExamMark

@{
    ViewData["Title"] = "Edit Exam Marks";
}

<h2>Edit Exam Marks</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="StudentId">Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="@(new SelectList(ViewBag.Students, "Id", "Name"))">
            <option value="">Select Student</option>
        </select>
    </div>

    <div class="form-group">
        <label for="CourseId">Course</label>
        <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(ViewBag.Courses, "Id", "CourseName"))">
            <option value="">Select Course</option>
        </select>
    </div>

    <div class="form-group">
        <label>MCQ</label>
        <input asp-for="MCQ" class="form-control" />
    </div>
    <div class="form-group">
        <label>Written</label>
        <input asp-for="Written" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
